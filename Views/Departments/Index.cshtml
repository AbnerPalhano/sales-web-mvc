@model IEnumerable<SalesWebMvc.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h1>@ViewData["Title"]</h1>

@if (Model.Count() <= 0)
{
    <p>There's nothing here yet.</p>

    <p>
    <a class="btn btn-success" asp-action="Create">Add new department</a>
</p>
}
else
{
    <p>
    <a class="btn btn-success" asp-action="Create">Add new department</a>
</p>
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
                <tr>
                    <td style="padding-top: 1em">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a class="btn btn-dark" style="margin: .1em" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-dark" style="margin: .1em" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-danger" style="margin: .1em" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
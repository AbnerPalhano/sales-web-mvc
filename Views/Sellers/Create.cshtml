@model SalesWebMvc.Models.Seller

@{
    ViewData["Title"] = "Add";
}

<h1>@ViewData["Title"]</h1>

<h4>Sellers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-bottom: 1em">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom: 1em">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>
            <div class="form-group" style="margin-bottom: 1em">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>

            </div>
            <div class="form-group" style="margin-bottom: 1em">
                <label asp-for="BaseSalary" class="control-label"></label>
                <input asp-for="BaseSalary" class="form-control" />
                <span asp-validation-for="BaseSalary" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Add new seller" class="btn btn-success">
                <a asp-action="Index" class="btn btn-dark">Back to seller list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@model IEnumerable<SalesWebMvc.Models.Seller>
@{
    ViewData["Title"] = "Sellers";
}

<h1>@ViewData["Title"]</h1>

@if (Model.Count() <= 0)
{
    <p>There's no sellers yet.</p>

    <p>
    <a class="btn btn-success" asp-controller="Sellers" asp-action="Create">Add new seller</a>
</p>
}
else
{
    <p>
    <a class="btn btn-success" asp-controller="Sellers" asp-action="Create">Add new seller</a>
</p>

    <table class="table table-striped table hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model =>model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.BaseSalary)
            </th>

            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
                <tr>
                    <td style="padding-top: 1em">
                        @Html.DisplayFor(modelitem =>item.Id)
                    </td>
                    <td style="padding-top: 1em">
                        @Html.DisplayFor(modelitem =>item.Name)
                    </td>
                    <td style="padding-top: 1em">
                        @Html.DisplayFor(modelitem =>item.Email)
                    </td>
                    <td style="padding-top: 1em">
                        @Html.DisplayFor(modelitem =>item.BirthDate)
                    </td>
                    <td style="padding-top: 1em">
                        @Html.DisplayFor(modelitem =>item.BaseSalary)
                    </td>
                    <td></td>
                    <td></td>
                    <td>
                        <a class="btn btn-dark" style="margin: .1em" asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                        <a class="btn btn-dark" style="margin: .1em" asp-action="Details" asp-route-id="@item.Id">Details</a>

                        <a class="btn btn-danger" style="margin: .1em" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
